<subsection xml:id="subsec-representing-integers-on-a-number-line">
    <title>Representing Integers on a Number Line</title>
    <activity>
            <p>
                <alert>Work in groups of 5 learners</alert>
            </p>
            <p>
                <ol marker="1. ">
                    <li>
                        <p>
                            Draw a number line similar to the one shown below.
                        </p>
                    </li>
                    <li>
                        <p>
                            Mark the steps you moved in the previous activity, on the number line.
                        </p>
                    </li>
                    <li>
                        <p>
                            Discuss and share your representation with the rest of the class.
                        </p>
                    </li>
                </ol>
            </p>
    </activity>
    <example>
        <statement>
            <p>
                <ol marker="a)">
                    <li>
                        <p>
                            Draw a number line and represent each of the following integers on the number line:
                        </p>
                        <p>
                            <m>-3,+1,+2,+3,-2,-1,+4,0,+5</m>
                        </p>
                    </li>
                </ol>
            </p>
        </statement>
        <solution>
            <p>
                
            </p>
            <image>
                <shortdescription></shortdescription>
                <latex-image label="number-line-representing-integers">
                    \begin{tikzpicture}
                        \draw[&lt; - &gt;](-3.5,0) -- (5.5,0);
                        
                        \foreach \x in {1,2,3,4,5} {
                            \draw (\x,0.1) -- (\x,-0.1); 
                            \node[below] at (\x,-0.1) {+\x}; 
                        }

                        \draw (0,0.1) -- (0,-0.1);
                        \node[below] at (0,-0.1) {0}; 

                        \foreach \x in {-1,-2,-3} {
                            \draw (\x,0.1) -- (\x,-0.1); 
                            \node[below] at (\x,-0.1) {-\x}; 
                        }

                        \draw[thick,red] (-3,-0.4) circle(0.3);
                        \draw[thick,red] (1,-0.4) circle(0.3);
                        \draw[thick,red] (2,-0.4) circle(0.3);
                        \draw[thick,red] (3,-0.4) circle(0.3);
                        \draw[thick,red] (-2,-0.4) circle(0.3);
                        \draw[thick,red] (-1,-0.4) circle(0.3);
                        \draw[thick,red] (4,-0.4) circle(0.3);
                        \draw[thick,red] (0,-0.4) circle(0.3);
                        \draw[thick,red] (5,-0.4) circle(0.3);
                    \end{tikzpicture}
                </latex-image>
            </image>
        </solution>
    </example>
