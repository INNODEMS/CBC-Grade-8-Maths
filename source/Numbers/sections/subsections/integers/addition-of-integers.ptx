    <example>
        <statement>
            <p>
                Use a number line to work out the following:
            </p>
            <p>
                <ol marker="a)">
                    <li>
                        <p>
                            <m>(-8) + (+3)</m>
                        </p>
                    </li>
                    <li>
                        <p>
                            <m>(-9) - (+4)</m>
                        </p>
                    </li>
                </ol>
            </p>
        </statement>
        <solution>
            <p>
               <ol marker="a)">
                    <li>
                        <p>
                            <m>(-8) + (+3)</m>
                        </p>
                        <image>
                            <shortdescription></shortdescription>
                            <latex-image label="number-line-addition-of-integers1">
                                \begin{tikzpicture}
                                    \draw[&lt; - &gt;](-8.5,0) -- (3.5,0);
                                    \foreach \x in {-8,-7,-6,-5,-4,-3,-2,-1,0,1,2,3} {
                                        \draw (\x,0.1) -- (\x,-0.1); 
                                        \node[below] at (\x,-0.1) {\x}; 
                                    }
                                \end{tikzpicture}
                            </latex-image>
                        </image>
                    </li>
                    <li>
                        <p>
                            <m>(-9) - (+4)</m>
                        </p>
                        <image>
                            <shortdescription></shortdescription>
                            <latex-image label="number-line-addition-of-integers2">
                                \begin{tikzpicture}
                                    \draw[&lt; - &gt;](-9.5,0) -- (4.5,0);
                                    \foreach \x in {-9,-8,-7,-6,-5,-4,-3,-2,-1,0,1,2,3,4} {
                                        \draw (\x,0.1) -- (\x,-0.1); 
                                        \node[below] at (\x,-0.1) {\x}; 
                                    }
                                \end{tikzpicture}
                            </latex-image>
                        </image>
                    </li>
               </ol> 
            </p>
        </solution>
    </example>
