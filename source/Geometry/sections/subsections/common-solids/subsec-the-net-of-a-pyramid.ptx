       <example>
        <statement>
            <p>
                Draw the net of the pyramid shown below.
            </p>

            <image width="50%">
            <latex-image label="pyramid2">
                \begin{tikzpicture}
                % Define vertices of the square base
                \coordinate (A) at (-2,-1);
                \coordinate (B) at (0,-1);
                \coordinate (C) at (1,0);  
                \coordinate (D) at (-1,0);  

                % Define the apex of the pyramid
                \coordinate (E) at (0,3);  % Center above the square base
                
                % Draw the square base
                \draw[thick] (A) -- (B) -- (C) -- (D) -- cycle;
                
                % Draw edges connecting the apex to the base
                \draw[thick] (E) -- (A);
                \draw[thick] (E) -- (B);
                \draw[thick] (E) -- (C);
                \draw[style=dashed,thick] (E) -- (D);
                
                % Optional: Add shading for clarity
                \fill[blue!20,opacity=0.5] (A) -- (B) -- (C) -- (D) -- cycle;  % Shade one face
                \fill[red!20,opacity=0.5] (B) -- (C) -- (E) -- cycle; % Shade another face
                \fill[orange!20,opacity=0.5] (D) -- (C) -- (E) -- cycle; % Shade another face
                \fill[yellow!20,opacity=0.5] (A) -- (D) -- (E) -- cycle; % Shade another face
                \end{tikzpicture}
            </latex-image>
                <shortdescription></shortdescription>
                
            </image>
        </statement>

        <solution>
            <p>
                The net of the pyramid is shown below.
            </p>

            <image>
            <latex-image>
                \begin{tikzpicture}
                   \coordinate (A) at (0,0);
                    \coordinate (B) at (5,0);
                    \coordinate (C) at (5,3);
                    \coordinate (D) at (0,3);

                    % Define the coordinates of the outer triangles (adjusted for consistency)
                    \coordinate (V1) at (2.5,6);  % Top triangle peak
                    \coordinate (V2) at (8,1.5);  % Right triangle peak
                    \coordinate (V3) at (2.5,-3); % Bottom triangle peak
                    \coordinate (V4) at (-3,1.5); % Left triangle peak

                    % Draw and fill the shapes with different colors
                    \fill[gray!50] (A) -- (B) -- (C) -- (D) -- cycle; % Rectangle (grayish)
                    \fill[blue] (D) -- (C) -- (V1) -- cycle; % Top triangle
                    \fill[orange] (C) -- (B) -- (V2) -- cycle; % Right triangle
                    \fill[green] (A) -- (B) -- (V3) -- cycle; % Bottom triangle
                    \fill[yellow] (A) -- (D) -- (V4) -- cycle; % Left triangle

                    % Draw the outlines
                    \draw[thick] (A) -- (B) -- (C) -- (D) -- cycle;
                    \draw[thick] (D) -- (C) -- (V1) -- cycle;
                    \draw[thick] (C) -- (B) -- (V2) -- cycle;
                    \draw[thick] (A) -- (B) -- (V3) -- cycle;
                    \draw[thick] (A) -- (D) -- (V4) -- cycle;

                    % Vertex Labels
                    \node[above] at (V1) {V};
                    \node[right] at (V2) {V};
                    \node[below] at (V3) {V};
                    \node[left] at (V4) {V};

                \end{tikzpicture}
            </latex-image>
            </image>
        </solution>
