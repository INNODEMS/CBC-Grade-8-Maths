    <example>
        <statement>
            <p>
                A spinner wheel shown has six equal sectors.
            </p>
           <image width = "40%">
            <latex-image>
                \begin{tikzpicture}
                    % Draw the outer circle
                    \draw[thick] (0,0) circle (3cm);

                    % Define sector angles and draw dividing lines
                    \foreach \angle in {0, 60, 120, 180, 240, 300} {
                        \draw[thick] (0,0) -- (\angle:3cm);
                    }

                    % Label the sectors with numbers (1 to 6)
                    \foreach \angle[count=\i] in {30, 90, 150, 210, 270, 330} {
                        \node at (\angle:2cm) {\Large \textbf{\i}};
                    }

                    % Draw the central pivot
                    \filldraw[black] (0,0) circle (0.2cm);

                    % Draw a SHORT black arrow pointing UP from the center
                    \draw[thick, black, ->] (0,0) -- (90:1cm);
                \end{tikzpicture}
            </latex-image>
           </image>
            <p>
                The spinner is span once. List all possible results.
            </p>
        </statement>
        <solution>
            <p>
                The possible results are <m>1,2,3,4,5</m> and <m>6</m>
            </p>
        </solution>
    </example>
